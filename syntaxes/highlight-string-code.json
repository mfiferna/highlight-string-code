{
    "scopeName": "highlight-string-code",
    "name": "source.stringcode",
    "injectionSelector": "L:source - (meta.embedded), L:text - (mate.embedded)",
    "patterns": [
        {
            "include": "#highlight-string-css"
        },
        {
            "include": "#highlight-string-js"
        },
        {
            "include": "#highlight-string-html"
        },
        {
            "include": "#highlight-string-sql"
        },
        {
            "include": "#highlight-string-hive"
        }
    ],
    "repository": {
        "keep-variable": {
            "patterns": [
                {
                    "begin": "(\\{)",
                    "end": "(\\})",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.section.embedded.begin"
                        }
                    },
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.section.embedded.end"
                        }
                    },
                    "contentName": "variable"
                }
            ]
        },
        "keep-variables": {
            "patterns": [
                {
                    "begin": "(`|'|\")",
                    "end": "(`|'|\")",
                    "captures": {
                        "1": {
                            "name": "string.quoted"
                        }
                    },
                    "patterns": [
                        {
                            "include": "string.quoted"
                        },
                        {
                            "include": "#keep-variable"
                        }
                    ],
                    "contentName": "string.quoted"
                },
                {
                    "include": "#keep-variable"
                }
            ]
        },
        "highlight-string-css": {
            "begin": "(/\\* *(css).*\\*/)",
            "end": "(/\\* *(\\!css).*\\*/)",
            "captures": {
                "1": {
                    "name": "comment.inline.css"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "contentName": "meta.embedded.block.css",
            "patterns": [
                {
                    "include": "source.css"
                }
            ]
        },
        "highlight-string-js": {
            "begin": "(// *(js).*)",
            "end": "(// *(\\!js).*)",
            "captures": {
                "1": {
                    "name": "comment.line.double-slash.js"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "contentName": "meta.embedded.block.js",
            "patterns": [
                {
                    "include": "source.js"
                }
            ]
        },
        "highlight-string-html": {
            "begin": "(<!-- *(html).*-->)",
            "end": "(<!-- *(\\!html).*-->)",
            "captures": {
                "1": {
                    "name": "comment.block.html"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "contentName": "meta.embedded.block.html",
            "patterns": [
                {
                    "include": "text.html.derivative"
                }
            ]
        },
        "highlight-string-sql": {
            "patterns": [
                {
                    "begin": "(-- *(sql).*)",
                    "beginCaptures": {
                        "1": {
                            "name": "comment.line.double-dash.sql"
                        },
                        "2": {
                            "name": "meta.embedded.block.sql entity.name.function"
                        }
                    },
                    "end": "(;)",
                    "endCaptures": {
                        "1": {
                            "name": "meta.embedded"
                        }
                    },
                    "contentName": "meta.embedded.block.sql",
                    "patterns": [
                        {
                            "include": "source.sql"
                        }
                    ]
                },
                {
                    "begin": "(-- *(beginsql|begin-sql).*)",
                    "end": "(-- *(endsql|end-sql).*)",
                    "captures": {
                        "1": {
                            "name": "comment.line.double-dash.sql"
                        },
                        "2": {
                            "name": "entity.name.function"
                        }
                    },
                    "contentName": "meta.embedded.block.sql",
                    "patterns": [
                        {
                            "include": "source.sql"
                        }
                    ]
                },
                {
                    "begin": "(SELECT|INSERT|DELETE|UPDATE|DROP|ALTER|CREATE|SET|TRUNCATE|GRANT|REVOKE)\\s",
                    "end": "(;)",
                    "beginCaptures": {
                        "1": {
                            "name": "meta.embedded.block.sql keyword.other.DML.sql"
                        }
                    },
                    "endCaptures": {
                        "1": {
                            "name": "meta.embedded.block.sql meta.embedded"
                        }
                    },
                    "contentName": "meta.embedded.block.sql",
                    "patterns": [
                        {
                            "include": "#keep-variables"
                        },
                        {
                            "include": "source.sql"
                        }
                    ]
                }
            ]
        },
        "highlight-string-hive": {
            "begin": "(-- *(hive).*)",
            "end": "(-- *(!hive).*)",
            "captures": {
                "1": {
                    "name": "comment.line.double-slash.asciidoc"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "contentName": "meta.embedded.block.hive",
            "patterns": [
                {
                    "include": "#keep-variables"
                },
                {
                    "include": "source.hive"
                }
            ]
        }
    }
}